{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-recommended-vue/scss"
  ],
  "rules": {
    "indentation": 2,
    "max-empty-lines": 1,
    "string-quotes": "single",
    "at-rule-empty-line-before": [
      "always",
      {
        "ignore": [
          "first-nested"
        ]
      }
    ],
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "screen"
        ]
      }
    ],
    "scss/operator-no-unspaced": null
  }
}
